<% @page_title = "#{@conference.name}" %>
<div id="two_col_col_one">
    <section id="event">
      <h1><%= @conference.name -%></h1>
      <h3><%= @conference.start_date.strftime("%B %e, %Y") -%> - <%= @conference.end_date.strftime("%B %e, %Y") -%></h3>

      <%- if !@conference.tagline.blank? -%>
      <p><em><%= @conference.tagline %></em></p>
      <%- end -%>

      <%- if @conference.in_progress? -%>
        <span class="label label-info"><em>Happening Today!</em></span>
        <br class="clearing"/>
      <%- end -%>

      <div class="description"><%= @conference.description.html_safe -%></div>

      <%- if !@conference.website.blank? -%>
      <p class="location">
        <h3><%= @conference.website.html_safe -%></h3>
      </p>
      <%- end -%>
   </section>

   <section id="presenters">
    <%= render(:partial => 'presenters', locals: {:conference => @conference}) %>
   </section>

   <section id="attendees">
    <%= render(:partial => 'attendees', locals: {:conference => @conference}) %>
   </section>


  <section id="event_meta">
    <p>Created by <%= link_to_learner(@conference.creator) %></p>
    <%- if current_learner -%>
      <p>
        <%- if current_learner.is_admin? %>
          <span class="edit"><%= link_to('edit conference details', edit_conference_path(@conference), :class => "editlink") -%></span> |
        <%- end -%>
        <span class="edit"><%= link_to("add a conference sesson", new_conference_event_path(:conference_id => @conference.id), :class => "editlink") -%></span>
      </p>
    <%- end %>
  </section>



</div>



<div id="two_col_col_two">

  <aside id="conference_schedule" class="radius10">
    <h4>Schedule by day</h4>
    <table class='table'>
      <tbody>
    <%- event_date_counts = @conference.event_date_counts -%>
    <%- event_date_counts.keys.sort.each do |date| -%>
    <tr>
    <td><i class="fa fa-calendar"></i><strong><%= link_to("#{date.strftime('%A, %B %e')}", schedule_conference_path(id: @conference.hashtag, date: date.to_s)) %></strong></td>
    <td><%= "#{event_date_counts[date]} Events" %></td>
    </tr>
    <%- end -%>
    </tbody>
    </table>
  </aside>

  <%- if current_learner -%>
    <aside id="eventconnections" class="radius10">
      <%= render :partial => 'connections' %>
    </aside>
  <%- end -%>

  <aside id="twitter_sidebar" class="radius10">
    <%= render :partial => 'twitter_sidebar' %>
  </aside>

</div>



<script class="code" type="text/javascript">
  $('.submittable').live('change',
  function() {
    $(this).parents('form:first').submit();
  });

</script>
