<% @page_title = "#{@conference.name}" %>
<div id="two_col_col_one">
    <section id="event">
      <h1><%= @conference.name -%></h1>
      <%- if !@conference.tagline.blank? -%>
      <p><em><%= @conference.tagline %></em></p>
      <%- end -%>
      
      <%- if @conference.in_progress? -%>
        <span class="happening_now"><em>Happening Today!</em></span>
        <br class="clearing"/>
      <%- end -%>
    
      <div class="description"><%= format_text_for_display(@conference.description) -%></div>

      
      <%- if !@conference.website.blank? -%>
      <p class="location">
        <h3>Conference Website</h3>
        <%= format_text_for_display(@conference.website) -%>
      </p>
      <%- end -%>
   </section>

   <section id="presenters">
    <strong>Presenters go here</strong>
   </section>
   
   <section id="attendees">
    <strong>Attendees go here</strong>
   </section>

      <section id="comments">
    <strong>Comments?</strong>
   </section>

  <section id="event_meta">
    <p>Created by <%= link_to_learner(@conference.creator) %></p>
  </section>



</div>



<div id="two_col_col_two">
  <aside id="event_time" class="radius10">
        <h2>
           <span id="session_date"><%= @conference.start_date.strftime("%B %e, %Y") -%> - <%= @conference.end_date.strftime("%B %e, %Y") -%></span>
        </h2>
        <strong>Show the organizers</strong>
    </aside>
    
    <%- if current_learner -%>
    
      <aside id="eventconnections" class="radius10">
        <strong>Make some connections</strong>
      </aside>
      
    <%- else -%>
       <aside id="eventconnections" class="radius10 placeholder">
         <%= render(partial: 'shared/sign_in_to_vote')%>
          <p class="sitv_element cursor"><%= link_to("Connect with this conference", new_learner_session_path(:redirect_to => request.fullpath)) -%></p>
          </div> <!-- end .sitv_element_wrapper  -->
          <br class="clearing" />
       </aside>
     <%- end -%>

     
     
    


<br class='clearing' />
</div>



<script class="code" type="text/javascript">
  $('.submittable').live('change', 
  function() {
    $(this).parents('form:first').submit();
  });  

  $(document).ready(function() {
    // sitv = sign in to vote
    $('.nojs_display').hide();
    
    $('.sitv_element_wrapper').each(function(index) {
        var $sitv_element = $(this).find('.sitv_element')
        var $h = $sitv_element.outerHeight();
        var $w = $sitv_element.outerWidth();
        $(this)
          .find('.sitv_targetarea').height($h).width($w);
    });
    
    $('.sitv_targetarea').bind('click', function () {
        $(this)
          .siblings('.sitv_content')
          .fadeIn('fast');
    });
    
    $('.sitv_content')
      .mouseleave(function() {
        $(this)
          .fadeOut('fast');
    });      
  });

</script>
