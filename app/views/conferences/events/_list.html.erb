<% if @events.total_count > 0 %>

  <%= pagination_counts(@events) %>  
  <%= paginate @events %>
    
  <div id="event_list">
    <% @events.each do |event| %>
        <div class="event">
          <h3><span class="<%= (event.has_recording?) ? "recording_available" : "no_recording_available" %>">
            <% if event.is_expired %>
              <em class="expired">expired</em>
            <% end %>
          <%= link_to event.title, event_path(event) %> <% if event.in_progress? %><em class="happening_now_list">Happening now</em><% end %>
          </span>
          </h3>
          <p class="details">
            <strong><%= event.session_start.strftime("%l:%M %p").downcase -%> <%= event.session_start.strftime("%Z") -%>, <%= event.session_start.strftime("%B %e, %Y") -%></strong>. Presented by <%= display_presenters(event.presenters) %>.</p>
          <p class="description"><%= format_text_for_display(event.description.truncate(280,separator: ' ')) %></p>
          
        </div>
    <% end %>
  </div>
  
  <%= paginate @events %>
    
<% else %>

  <p>There are no events right now.</p>
  
<% end %>