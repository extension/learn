<fieldset id="name">
  <p>
    <%= conference_form.label :name, "Conference Name" %>
    <%= conference_form.text_field :name, {:class => 'span8'}  %>
  </p>

  <p>
    <%= conference_form.label :tagline, "Tagline" %>
    <%= conference_form.text_field :tagline, {:class => 'span8'}  %>
  </p>

  <p>
    <%= conference_form.label :hashtag, "Hashtag" %>
    <%= conference_form.text_field :hashtag, {:class => 'span2'}  %>
  </p>
 </fieldset>

 
<fieldset id="website">
  <p>
    <%= conference_form.label :website, "Website" %>
   <%=  conference_form.text_field :website, {:class => 'span6'} %>
  </p>
 </fieldset>

 <fieldset id="description">
    <p>
       <%= conference_form.label :description, 'Description' %>
       <%= conference_form.text_area :description, {:rows => "7"} %>
    </p>
 </fieldset>
 
 <fieldset id="datetime">
   <p>
   <%= conference_form.label :start_date, 'Conference Start Date' %>
   <%= conference_form.text_field :start_date, {class: 'datepicker'} %>
   </p>

    <p>
   <%= conference_form.label :end_date, 'Conference End Date' %>
   <%= conference_form.text_field :end_date, {class: 'datepicker'} %>
   </p>
   
   <p>
   <%= conference_form.label :time_zone, 'Time Zone' %>
   <%= conference_form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {:default => @conference.time_zone}, {:class => "span5"} %>
   </p>
   
 </fieldset>
   
 
 <fieldset>
   <p>
     <label>
     <%= conference_form.check_box :is_virtual %>
     This conference is "virtual" - all conference sessions will be broadcast online.
     </label>
   </p>
  </fieldset>
 

<p>
  <%= submit_tag 'Save Conference', :class => "btn btn-primary btn-large" %>
  <%- if @conference.id %>
    <%= link_to("cancel", conference_path(@conference.id), :class => "cancel") -%>
  <%- else -%>
    <%= link_to("cancel", root_path(), :class => "cancel") -%>
  <%- end -%>
</p>
 
 <script class="code" type="text/javascript">
   $('.datepicker').datepicker({dateFormat: 'yy-mm-dd'});
 </script>
