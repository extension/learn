<ul id="signup_options">
  <%= render :partial => "devise/shared/links" %>
</ul>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "half" }) do |f| %>
  <fieldset>
    <legend>Forgot your password?</legend>
    
    <%= devise_error_messages! %>
  
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.email_field :email, :class => "xlarge", :size => nil %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", :class => "btn primary" %>
    </div>
  </fieldset>
<% end %>

