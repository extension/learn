<% if @rating.rateable.class.name.downcase == 'comment' %>
  $("#<%= @rating.rateable.class.name.downcase %>_votes_<%= @rating.rateable.id %>").html("<%= escape_javascript(render :partial => 'partials/ratings', locals: {rateable_object: @rating.rateable}) %>")
<% else %>
  $("#<%= @rating.rateable.class.name.downcase %>_votes").html("<%= escape_javascript(render :partial => 'partials/ratings', locals: {rateable_object: @rating.rateable}) %>")
<% end %>

$("#undo_vote_<%= @rating.rateable.class.name.downcase %>_<%= @rating.rateable.id %>").html("<span id='upvote_<%= @rating.rateable.class.name.downcase %>_<%= @rating.rateable.id %>'><%= escape_javascript(button_to '+', ratings_path(:rating => {:rateable_id => @rating.rateable_id, :rateable_type => @rating.rateable_type, :score => 1}), :method => :post, :remote => true, :class => 'btn') %></span>")
