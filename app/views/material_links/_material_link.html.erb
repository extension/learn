<div id="link-<%= material_link.id %>">
  <h4><%= format_text_for_display(material_link.description) %></h4>
  <p><%= format_text_for_display(material_link.reference_link) %></p>
  <%= link_to '[X] Delete', material_link_path(material_link), confirm: 'Are you sure you want to delete this?', method: :delete, remote: true %>
  <%= link_to 'Edit', edit_material_link_path(material_link), remote: true %>
</div>