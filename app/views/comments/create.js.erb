<% if @comment.parent.blank? %>
$("#new-comments-form").html("<%= escape_javascript(render partial: 'new_comments_form') %>");
<% else %> 
$("#comment-<%= @comment.parent.id %>").children(".cc-comment-form").replaceWith("<%= escape_javascript(render partial: 'comments/new_comments_form') %>");
<% end %>

<% if !defined?(@errors) || @errors.blank? %>
  $("#comments-list").html("<%= escape_javascript(render partial: 'comments_list') %>");
<% end %>