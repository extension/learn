<% if !defined?(@errors) || @errors.blank? %>
  $("#comment-<%= @comment.id %>").replaceWith("<%= escape_javascript(render partial: 'comments/comment', locals: { comment: @comment }) %>");
<% else %>
  $("#comment-<%= @comment.id %>").html("<%= escape_javascript(render partial: 'comments_form') %>");
<% end %>
